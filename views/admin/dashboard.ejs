<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4 text-center">
      <h2 class="font-bold text-3xl sm:text-4xl text-indigo-600">Admin Dashboard</h2>
    </div>
  </header>

  <!-- Navbar Include -->
  <%- include('../partials/navbar') %>

  <!-- Action Buttons -->
  <main class="flex-1 px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-wrap justify-center gap-3 mb-8">
      <a href="/admin/course/new" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg shadow transition">+ Add Course</a>
      <a href="/admin/subject/new" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow transition">+ Add Subject</a>
      <a href="/admin/logout" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow transition">Logout</a>
    </div>

    <!-- Courses Section -->
    <section class="max-w-5xl mx-auto">
      <h2 class="text-center font-bold text-2xl sm:text-3xl text-indigo-600 mb-6">Courses</h2>

      <% if (courses.length === 0) { %>
        <p class="text-center text-gray-600 italic">No courses available yet.</p>
      <% } else { %>
        <div class="space-y-4">
          <% courses.forEach((course, index) => { %>
            <div 
              x-data="{ open: false }" 
              class="border border-gray-200 rounded-xl shadow-sm bg-white overflow-hidden"
            >
              <!-- Header -->
              <button 
                @click="open = !open" 
                class="w-full flex justify-between items-center px-4 sm:px-6 py-3 text-left text-lg font-medium text-gray-800 hover:bg-gray-100 transition"
              >
                <span class="truncate"><%= course.name %> (<%= course.code %>)</span>
                <svg 
                  :class="{'rotate-180': open}" 
                  class="w-5 h-5 transition-transform transform text-gray-600" 
                  fill="none" 
                  stroke="currentColor" 
                  stroke-width="2" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- Expandable Content -->
              <div 
                x-show="open" 
                x-transition 
                class="px-4 sm:px-6 py-4 border-t border-gray-200 text-gray-700 text-sm sm:text-base"
              >
                <p><strong>Description:</strong> <%= course.description || 'No description provided.' %></p>
                <p class="mt-2">
                  <a href="<%= course.pageUrl %>" target="_blank" class="text-indigo-600 hover:underline">
                    View Course Page
                  </a>
                </p>
                <form 
                  action="/admin/course/<%= course._id %>/delete" 
                  method="POST" 
                  class="mt-4"
                >
                  <button 
                    type="submit" 
                    onclick="return confirm('Are you sure you want to delete this course? This will also remove its subjects.')" 
                    class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg text-sm transition"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>
  </main>
</body>
</html>
