<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Subject | NUPAC</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center py-10">

  <div class="w-full max-w-lg bg-white shadow-lg rounded-xl p-8 mx-4">
    <h2 class="text-3xl font-bold text-center text-blue-700 mb-6">Add Subject</h2>

    <form method="POST" action="/admin/subject/new" class="space-y-5">

      <!-- Course Selection -->
      <div>
        <label for="courseCode" class="block text-gray-700 font-medium mb-1">Select Course</label>
        <select
          id="courseCode"
          name="courseCode"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none"
          required
        >
          <% courses.forEach(c => { %>
            <option value="<%= c.code %>"><%= c.name %></option>
          <% }) %>
        </select>
      </div>

      <!-- Semester -->
      <div>
        <label for="semester" class="block text-gray-700 font-medium mb-1">Semester</label>
        <input
          type="number"
          id="semester"
          name="semester"
          placeholder="Enter semester (e.g., 1)"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none"
          required
        >
      </div>

      <!-- Subject Code -->
      <div>
        <label for="subjectCode" class="block text-gray-700 font-medium mb-1">Subject Code</label>
        <input
          type="text"
          id="subjectCode"
          name="subjectCode"
          placeholder="Enter subject code (e.g., CS101)"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none"
          required
        >
      </div>

      <!-- Subject Name -->
      <div>
        <label for="subjectName" class="block text-gray-700 font-medium mb-1">Subject Name</label>
        <input
          type="text"
          id="subjectName"
          name="subjectName"
          placeholder="Enter subject name"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none"
          required
        >
      </div>

      <!-- Folder Link -->
      <div>
        <label for="folderLink" class="block text-gray-700 font-medium mb-1">Google Drive Link</label>
        <input
          type="url"
          id="folderLink"
          name="folderLink"
          placeholder="Paste Google Drive folder link"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none"
          required
        >
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2.5 rounded-lg transition duration-200"
      >
        Add Subject
      </button>

    </form>
  </div>

</body>
</html>
